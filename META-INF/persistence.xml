<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="addis.homecakes.persistence" transaction-type="RESOURCE_LOCAL">
    <class>et.addis.home_cakes.orders.model.Role</class>
    <class>et.addis.home_cakes.orders.model.Users</class>
    <class>et.addis.home_cakes.orders.model.UserRoles</class>
    <class>et.addis.home_cakes.orders.model.ERole</class>
    <class>et.addis.home_cakes.orders.model.Pastry</class>
    <class>et.addis.home_cakes.orders.model.SubCity</class>
    <class>et.addis.home_cakes.orders.model.Bank</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/home_cakes" />
      <property name="javax.persistence.jdbc.user" value="postgres" />
      <property name="javax.persistence.jdbc.password" value="postgres" />
     <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>--> <!-- DB Dialect -->
      <!--            <property name="hibernate.hbm2ddl.auto" value="none" /> &lt;!&ndash; create / create-drop / update &ndash;&gt;-->

      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/home_cakes"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
